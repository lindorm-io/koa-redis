{
  "name": "@lindorm-io/koa-redis",
  "description": "Redis Connection middleware for @lindorm-io/koa applications",
  "version": "0.2.2",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/koa-redis.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/koa-redis/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist",
    "check:lint": "eslint --ext .ts ./src/",
    "check:lint:fix": "eslint --ext .ts ./src/ --fix",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:types:watch": "tsc -p tsconfig.json --noEmit --watch",
    "postpublish": "rimraf dist",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepublishOnly": "npm run build:clean && npm run build",
    "preversion": "npm run validate",
    "publish:major": "npm version major && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "test": "npm run test:unit",
    "test:clear": "jest --clearCache",
    "test:coverage": "rimraf coverage && jest --coverage --forceExit",
    "test:unit": "jest --config jest.config.js --",
    "test:unit:watch": "jest --config jest.config.js --watch --",
    "test:update": "jest --updateSnapshot",
    "test:watch": "npm run test:unit:watch",
    "update": "ncu -u && ncu -u",
    "validate": "npm run test:clear && npm run check:lint && npm run check:types && npm test"
  },
  "dependencies": {
    "@lindorm-io/errors": "^0.1.6",
    "lodash": "4.17.21"
  },
  "peerDependencies": {
    "@lindorm-io/entity": ">=0.2.0",
    "@lindorm-io/koa": ">=0.2.24",
    "@lindorm-io/redis": ">=0.3.0",
    "@lindorm-io/winston": ">=0.1.7"
  },
  "devDependencies": {
    "@lindorm-io/entity": "^0.2.0",
    "@lindorm-io/koa": "0.2.24",
    "@lindorm-io/redis": "0.3.0",
    "@lindorm-io/winston": "0.1.7",
    "@types/jest": "26.0.23",
    "@types/joi": "17.2.3",
    "@types/koa": "2.13.3",
    "@types/koa-bodyparser": "4.3.1",
    "@types/koa-router": "7.4.2",
    "@types/lodash": "4.14.170",
    "@types/node": "15.6.2",
    "@types/redis": "^2.8.29",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "eslint": "7.28.0",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "jest-extended": "0.11.5",
    "koa": "2.13.1",
    "lint-staged": "11.0.0",
    "mockdate": "3.0.5",
    "prettier": "2.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  }
}
